<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Tips">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>


        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#424141"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to Stay Awake"
            android:fontFamily="@font/poppinsbold"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="These are several ways to avoid drowsiness while driving:"
            />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#424141"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="1. Drive with a buddy"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:src="@drawable/drivebuddy"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Try driving with a buddy, especially if you have a long commute or are going on a road trip, so that you can switch off driving responsibilities when one of you gets drowsy."
            />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#424141"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Get a nap in beforehand"
            android:textSize="22sp"
            android:fontFamily="@font/poppinsbold"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:src="@drawable/nap"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
android:text="Take a nap for at least 15 to 30 minutes before you have to drive. According to a 2012 studyTrusted Source, even a short nap can get you the slow-wave sleep and rapid eye movement (REM) sleep you need to feel refreshed and alert."
            />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#424141"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Put on some tunes"
            android:fontFamily="@font/poppinsbold"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:src="@drawable/listening"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
android:text="Play some songs you know the words to so you can sing along and stimulate your brain. Or put on something energetic to get you pumped and wake yourself up. "
            />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#424141"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Have some caffeine"
            android:fontFamily="@font/poppinsbold"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:src="@drawable/coffee"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
android:text="Caffeine is the worldâ€™s most popular (and legal) stimulant. It can get you through a lot of other parts of your day that make you drowsy, so why not try it while you drive?"
            />
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>